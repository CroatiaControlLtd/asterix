                        <BitsShortName>TID</BitsShortName>
                        <BitsName>Transmitter Identification</BitsName>
                    </Bits>
                    <Bits from="16" to="1">
                        <BitsShortName>RID</BitsShortName>
                        <BitsName>Receiver Identification</BitsName>
                    </Bits>
                </Fixed>
            </Repetitive>
        </DataItemFormat>
    </DataItem>

    <DataItem id="400">
