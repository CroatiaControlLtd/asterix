<Category id="9" name="Composite Weather Reports" ver="2.1">

    <DataItem id="000">
        <DataItemName>Message Type</DataItemName>
        <DataItemDefinition>
            This Data Item allows for a more convenient handling of the messages
            at the receiver side by further defining the type of transaction.
        </DataItemDefinition>
        <DataItemFormat desc="1-octet fixed length data item.">
            <Fixed length="1">
                <Bits from="8" to="1">
                    <BitsShortName>MT</BitsShortName>
                    <BitsName>Message Type</BitsName>
                    <BitsValue val="2">Cartesian vector</BitsValue>
                    <BitsValue val="253">Intermediate-update-step message</BitsValue>
                    <BitsValue val="254">Start-of-picture message</BitsValue>
                    <BitsValue val="255">End-of-picture message</BitsValue>
                </Bits>
            </Fixed>
        </DataItemFormat>
    </DataItem>

    <DataItem id="010">
        <DataItemName>Data Source Identifier</DataItemName>
        <DataItemDefinition>
            Identification of the radar station from which the data are received.
        </DataItemDefinition>
        <DataItemFormat desc="2-octet fixed length data item.">
            <Fixed length="2">
                <Bits from="16" to="9">
                    <BitsShortName>SAC</BitsShortName>
                    <BitsName>System Area Code</BitsName>
                </Bits>
                <Bits from="8" to="1">
                    <BitsShortName>SIC</BitsShortName>
                    <BitsName>System Identification Code</BitsName>
                </Bits>
            </Fixed>
        </DataItemFormat>
        <DataItemNote>
            Note:
                The defined SACs are on the EUROCONTROL ASTERIX website
                (www.eurocontrol.int/asterix)
        </DataItemNote>
    </DataItem>

    <DataItem id="020">
        <DataItemName>Vector Qualifier</DataItemName>
        <DataItemDefinition>
            This Data Item defines the orientation of the following sequence
            of Cartesian vectors, their intensity level and the relevant
            coordinate system.
        </DataItemDefinition>
        <DataItemFormat desc="Variable data item.">
            <Variable>
                <Fixed length="1">
                    <Bits bit="8">
                        <BitsShortName>ORG</BitsShortName>
                        <BitsValue val="0">Local Coordinates</BitsValue>
                        <BitsValue val="1">System Coordinates</BitsValue>
                    </Bits>
                    <Bits from="7" to="5" encode="unsigned">
                        <BitsShortName>I</BitsShortName>
                        <BitsName>Intensity Level</BitsName>
                        <BitsUnit></BitsUnit>
                    </Bits>
                    <Bits from="4" to="2">
                        <BitsShortName>S</BitsShortName>
                        <BitsName>Shading Orientation with Respect to North</BitsName>
                        <BitsValue val="0">0 deg</BitsValue>
                        <BitsValue val="1">22.5 deg</BitsValue>
                        <BitsValue val="2">45 deg</BitsValue>
                        <BitsValue val="3">67.5 deg</BitsValue>
                        <BitsValue val="4">90 deg</BitsValue>
                        <BitsValue val="5">112.5 deg</BitsValue>
                        <BitsValue val="6">135 deg</BitsValue>
                        <BitsValue val="7">157.5 deg</BitsValue>
                    </Bits>
                    <Bits bit="1" fx="1">
                        <BitsShortName>FX</BitsShortName>
                        <BitsName>Extension Indicator</BitsName>
                        <BitsValue val="0">End of Data Item</BitsValue>
                        <BitsValue val="1">Extension</BitsValue>
                    </Bits>
                </Fixed>
            </Variable>
        </DataItemFormat>
        <DataItemNote>
            For polar vectors &amp;quot;S-bits&amp;quot; are meaningless and shall be set to zero.
        </DataItemNote>
    </DataItem>

    <DataItem id="030">
        <DataItemName>Sequence of Cartesian Vectors</DataItemName>
        <DataItemDefinition>
            Sequence of weather vectors in local or system Cartesian coordinates.
        </DataItemDefinition>
        <DataItemFormat desc="Repetitive data item.">
            <Repetitive>
                <Fixed length="6">
                    <Bits from="48" to="33" encode="signed">
                        <BitsShortName>X</BitsShortName>
                        <BitsName>X-coordinate</BitsName>
                        <BitsUnit scale="1.0">NM</BitsUnit>
                    </Bits>
                    <Bits from="32" to="17" encode="signed">
                        <BitsShortName>Y</BitsShortName>
                        <BitsName>Y-coordinate</BitsName>
                        <BitsUnit scale="1.0">NM</BitsUnit>
                    </Bits>
                    <Bits from="16" to="1" encode="unsigned">
                        <BitsShortName>L</BitsShortName>
                        <BitsName>Vector Length</BitsName>
                        <BitsUnit></BitsUnit>
                    </Bits>
                </Fixed>
            </Repetitive>
        </DataItemFormat>
        <DataItemNote>
            &apos;F&apos; shall be incorporated as a parameter in the SOP message.
        </DataItemNote>
    </DataItem>

    <DataItem id="060">
        <DataItemName>Synchronisation/Control Signal</DataItemName>
        <DataItemDefinition>
            This Data Item provides the serial Step Number.
        </DataItemDefinition>
        <DataItemFormat desc="Variable data item.">
            <Variable>
                <Fixed length="1">
                    <Bits from="8" to="3" encode="unsigned">
                        <BitsShortName>SN</BitsShortName>
                        <BitsName>Step Number</BitsName>
                        <BitsUnit></BitsUnit>
                    </Bits>
                    <Bits bit="2">
                        <BitsShortName>spare</BitsShortName>
                        <BitsName>Spare bit(s) set to 0</BitsName>
                        <BitsConst>0</BitsConst>
                    </Bits>
                    <Bits bit="1" fx="1">
                        <BitsShortName>FX</BitsShortName>
                        <BitsName>Extension Indicator</BitsName>
                        <BitsValue val="0">End of Data Item</BitsValue>
                        <BitsValue val="1">Extension</BitsValue>
                    </Bits>
                </Fixed>
            </Variable>
        </DataItemFormat>
    </DataItem>

    <DataItem id="070">
        <DataItemName>Time of Day</DataItemName>
        <DataItemDefinition>
            Absolute time stamping expressed as UTC time.
        </DataItemDefinition>
        <DataItemFormat desc="3-octet fixed length data item.">
            <Fixed length="3">
                <Bits from="24" to="1" encode="unsigned">
                    <BitsShortName>ToD</BitsShortName>
                    <BitsName>Time of Day</BitsName>
                    <BitsUnit scale="0.0078125">s</BitsUnit>
                </Bits>
            </Fixed>
        </DataItemFormat>
        <DataItemNote>
            The time of day value is reset to zero each day at midnight.
        </DataItemNote>
    </DataItem>

