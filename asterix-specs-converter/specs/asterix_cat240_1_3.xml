    <DataItem id="040">
        <DataItemName>Video Header Nano</DataItemName>
        <DataItemDefinition>
            Defines a group of video cells corresponding to a video radial: all cells
            have the same size in azimuth and range and are consecutive in range.
        </DataItemDefinition>
        <DataItemFormat desc="12-octet fixed length data item.">
            <Fixed length="12">
                <Bits from="96" to="81" encode="unsigned">
                    <BitsShortName>STARTAZ</BitsShortName>
                    <BitsName>Start Azimuth of the Cells Group</BitsName>
                    <BitsUnit scale="0.0054931640625" min="0" max="360">deg</BitsUnit>
                </Bits>
                <Bits from="80" to="65" encode="unsigned">
                    <BitsShortName>ENDAZ</BitsShortName>
                    <BitsName>End Azimuth of the Cells Group</BitsName>
                    <BitsUnit scale="0.0054931640625" min="0" max="360">deg</BitsUnit>
                </Bits>
                <Bits from="64" to="33" encode="unsigned">
                    <BitsShortName>STARTRG</BitsShortName>
                    <BitsName>Starting Range of the Cells Group, Expressed in Number of Cells</BitsName>
                    <BitsUnit></BitsUnit>
                </Bits>
                <Bits from="32" to="1" encode="unsigned">
                    <BitsShortName>CELLDUR</BitsShortName>
                    <BitsName>Video Cell Duration in Nano-seconds</BitsName>
                    <BitsUnit scale="1.0">ns</BitsUnit>
                </Bits>
            </Fixed>
        </DataItemFormat>
    </DataItem>

